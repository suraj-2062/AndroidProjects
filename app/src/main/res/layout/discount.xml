<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dicount"
    android:orientation="vertical"
    android:background="@color/black"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">

        <TextView
            android:id="@+id/original"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Original Price"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/discount_per"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Discount percent % "
            android:layout_below="@+id/original"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"/>


        <TextView
            android:id="@+id/final_price"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Final Price "
            android:layout_below="@+id/discount_per"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"/>


        <EditText
            android:id="@+id/input_price"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:hint="Original price"
            android:inputType="number"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:layout_marginTop="30dp"/>

        <EditText
            android:id="@+id/dis_per"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:hint="Rate of Percent"
            android:inputType="number"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/input_price"
            android:padding="10dp"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/org_price"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            android:layout_below="@+id/dis_per"
            android:padding="10dp"
            android:layout_marginTop="30dp"/>


    </RelativeLayout>






</LinearLayout>